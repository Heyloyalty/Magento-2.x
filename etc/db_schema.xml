<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order">
        <column
            name="export_to_heyloyalty"
            nullable="true"
            default="0"
            xsi:type="int"
            comment="Order exported to HeyLoyalty"
        />
    </table>
    <table name="heyloyalty_export">
        <column name="id" xsi:type="int" nullable="false" identity="true" unsigned="true" comment="ID"/>
        <column name="member_email" xsi:type="varchar" nullable="true" length="255" comment="Member Email"/>
        <column name="product_id" xsi:type="varchar" nullable="true" length="255" comment="Product ID"/>
        <column name="category_id" xsi:type="varchar" nullable="true" length="255" comment="Category ID"/>
        <column name="category_name" xsi:type="varchar" nullable="true" length="255" comment="Category Name"/>
        <column name="variation_type" xsi:type="varchar" nullable="true" length="255" comment="Variation Type"/>
        <column name="variation_id" xsi:type="varchar" nullable="true" length="255" comment="Variation ID"/>
        <column name="product_name" xsi:type="varchar" nullable="true" length="255" comment="Product Name"/>
        <column name="product_price" xsi:type="varchar" nullable="true" length="255" comment="Product Price"/>
        <column name="product_url" xsi:type="varchar" nullable="true" length="255" comment="Product URL"/>
        <column name="original_price" xsi:type="varchar" nullable="true" length="255" comment="Original Price"/>
        <column name="discount" xsi:type="varchar" nullable="true" length="255" comment="Discount"/>
        <column name="description" xsi:type="varchar" nullable="true" length="255" comment="Description"/>
        <column name="currency" xsi:type="varchar" nullable="true" length="255" comment="Currency"/>
        <column name="event_type" xsi:type="varchar" nullable="true" length="255" comment="Event Type"/>
        <column name="amount" xsi:type="varchar" nullable="true" length="255" comment="Amount"/>
        <column name="created_at" xsi:type="datetime" comment="Created At"/>
        <!-- TODO: Add custom fields -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
